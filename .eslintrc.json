{
    "env": {
      "browser": true,
      "es2021": true
    },
    "extends": [
      "eslint:recommended",
      "plugin:prettier/recommended",
      "plugin:import/errors",
      "plugin:import/warnings"
    ],
    "ignorePatterns": ["node_modules", "dist", "build"],
    "parserOptions": {
      "ecmaVersion": "latest",
      "sourceType": "module"
    },
    "plugins": ["prettier", "import"],
    "rules": {
      "import/no-unresolved": [
        2, 
        { "caseSensitive": false,
          "ignore": 
          [
            "swiper/bundle",
            "swiper/css/bundle"
          ] 
        }
      ],
      "import/order": [
        2,
        {
          "groups": [
            "builtin",
            "external",
            "internal",
            "parent",
            "sibling",
            "index"
          ],
          "newlines-between": "always"
        }
      ],
      "indent": ["error", 2],
      "linebreak-style": ["off"],
      "prettier/prettier": "error",
      "quotes": ["error", "single"],
      "semi": ["error", "never"]
    },
    "settings": {
      "import/resolver": {
        "node": {
          "extensions": [".js"],
          "moduleDirectory": ["node_modules", "src/"]
        }
      }
    }
  }